<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:padding="24dp">

    <!-- Bouton circulaire pour "About Me" en haut à gauche -->
    <Button
        android:id="@+id/btnAboutMe"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_background"
        android:contentDescription="À propos de moi"
        android:drawablePadding="0dp"
        android:drawableTop="@drawable/about"
        android:gravity="center"
        android:padding="0dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"/>

    <!-- Bouton circulaire pour la commande vocale placé en haut à droite -->
    <Button
        android:id="@+id/btnVoiceCommand"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_background"
        android:drawablePadding="0dp"
        android:drawableTop="@drawable/ic_mic"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Lancer commande vocale"/>

    <!-- Titre stylisé placé au centre de l'écran -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To TalkFace"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <!-- Centrer les boutons de reconnaissance dans un LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp">

        <!-- Bouton pour la reconnaissance faciale -->
        <Button
            android:id="@+id/btnFaceRecognition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reconnaissance Faciale"
            style="@style/CyanButton"
            android:layout_marginBottom="20dp"/>

        <!-- Bouton pour la reconnaissance vocale -->
        <Button
            android:id="@+id/btnVoiceRecognition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reconnaissance Vocale"
            style="@style/CyanButton"/>

    </LinearLayout>

</RelativeLayout>
